<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
		
	<TextView
        android:id="@+id/textView1"
        android:textColor="@color/geek_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Diese Zeitpokale hast du gewonnen:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/textView1"
	    android:layout_marginTop="46dp"
	    android:src="@drawable/uhr1" />

	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/imageView1"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/uhr10" />

	<ImageView
	    android:id="@+id/imageView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/imageView2"
	    android:src="@drawable/uhr1tag" />

	<ImageView
	    android:id="@+id/imageView5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/imageView4"
	    android:layout_toLeftOf="@+id/imageView3"
	    android:src="@drawable/uhr1woche" />

	<ImageView
	    android:id="@+id/imageView6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imageView4"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="76dp"
	    android:src="@drawable/uhr1monat" />

	<ImageView
	    android:id="@+id/imageView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imageView2"
	    android:layout_marginTop="88dp"
	    android:layout_toLeftOf="@+id/imageView6"
	    android:src="@drawable/uhr3tag" />
        
</RelativeLayout>
